 <!-- Header -->
        <div id="header">
            <div class="header__nav-top">
                <div class="grid wide">
                    <nav class="header__nav">
                        <ul class="header__list ">
                            <li class="header__list-item">  
                                <%= link_to "Trang Chủ", root_path,class:"header__item-link " %>
                            </li>
                            <li class="header__list-item">
                                <a href="" class="header__item-link">Giới Thiệu</a>
                            </li>
                            <li class="header__list-item hidden-on-tablet">
                                <a href="" class="header__item-link">Tin Tức</a>
                            </li>
                            <li class="header__list-item hidden-on-tablet">
                                <a href="" class="header__item-link">Liên Hệ</a>
                            </li>
                        </ul>
                        <ul class="header__list hidden-on-mobile">
                            <li class="header__list-item hidden-on-tablet">
                                <a href="" class="header__item-link">Giỏ Hàng</a>
                            </li>
                            <li class="header__list-item hidden-on-tablet">
                                <a href="" class="header__item-link">Thanh Toán</a>
                            </li>
                            <%
                                if ( session[:user_name])
                            %>
                                <li class="header__list-item profile__user">
                                    <a href="" class="header__item-link "> Xin Chào! <%= session[:user_name] %></a>
                                    <div class="profile-content">
                                        <ul class="profile__list">
                                            <li class="profile__item">
                                                <a href="" class="profile__link">
                                                    Hồ Sơ <i class="fas fa-id-card-alt"></i>
                                                </a>
                                            </li>
                                            <li class="profile__item">
                                            
                                             <%= link_to  logout_user_path,method: :delete , class:'profile__link' do %> 
                                                Đăng Xuất  <i class="fas fa-sign-out-alt"></i>
                                             <% end %>  
                                            </li>
                                            
                                        </ul>
                                    </div>
                                </li>
                            <%
                                else  
                            %>
                                    <li class="header__list-item">
                                        <%= link_to "Đăng Kí", new_register_user_path,class:"header__item-link " %>
                                    </li>
                                    <li class="header__list-item">
                                        <a href="" class="header__item-link">Đăng Nhập</a>
                                    </li>
                            <%
                                end 
                            %>



                            
                        </ul>
                    </nav>
                   
                </div>
            </div>
            <div class="grid wide">
                <div class=" row header__license">
                    <div class="col-lg-4 col-md-6 col-sm-3">
                        <div class="header__logo">
                            <a href="" class="header__link-logo">
                                <%= image_tag("logo.png") %>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-0 col-sm-0">
                        <div class="header__contact-phone">
                            <a href="" class="contact-link">
                                <i class="fas fa-phone-alt"></i>
                                <span class="contact-phone">Hotline: 0366361624</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-9">
                        <div class="header__form-group">
                            <form action="" class="header__form">
                                <div class="header__input">
                                    <div class="header__input-text">
                                        <i class="fas fa-search"></i>
                                        <input type="text" placeholder="Từ Khóa..." >
                                    </div>
                                    <input type="submit" value="Tìm Kiếm">
                                </div>
    
                            </form>
                        </div>
                    </div>
                </div>
                <div class="header__menu ">
                    
                    <ul class="header__list-bottom  ">
                        <% @home.each do |home| %>
                            <li class="header__item-bottom hidden-on-mobile hidden-on-tablet " >
                                 <%= link_to home.name, home_path(home.id) ,class:"header__item-link " %>
                            </li>
                        <% end %>
                    </ul>
                    <ul class="header__list-bottom ">
                        <li class="header__item-bottom dropdown-list hidden-on-pc">
                            
                            <%= link_to "All Menu", root_path ,class:"header__item-link hidden-on-pc "%>
                            <ul class=" dropdown-mobi-tablet">
                                
                                <% @home.each do |category| %>
                                    <li class="header__dropdown-item" >
                                        <%= link_to category.name, "/ruby-book" ,class:"header__drowdown-link  " %>
                                    </li>
                                <% end %>

                            </ul>
                            
                        </li>
                        
                    </ul>
                    
                </div>
            </div>
        </div>
        <!-- End Header -->