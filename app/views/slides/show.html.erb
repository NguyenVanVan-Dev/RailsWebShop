<% content_for :content do %>
  <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Details Slider "<%= @slide.name %>"  </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="form-group col-md-12  text-center ">
                                 <h6 class="m-0 font-weight-bold text-primary">Image  "<%= @slide.name %>" </h6>
                                 <%= image_tag @slide.image ,class:"text-center" , style:"width:600px;" %>
                                </div>
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr class="text-center">
                                            <th> Name</th>
                                            <th> Title</th>
                                            
                                            <th>Time Add Product</th>
                                             <th>Time update Product</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    
                                        
                                         <tr class="text-center">
                                            <td><%= @slide.name %></td>
                                            <td><%= @slide.title %></td>
                                            
                                            <td><%= @slide.created_at %></td> 
                                            <td><%= @slide.updated_at %></td>   
                                            
                                        </tr>
                                        
                                       
                                       
                                    </tbody>
                                </table>
                                 <div class="form-group col-md-3">
                                    <%= link_to "Edit Product", edit_slide_path(@slide) ,class: "btn btn-warning  btn-block"%>
                                    
                                </div>
                                 <div class="form-group col-md-3">
                                   <%= link_to "Delete", delete_slide_path(@slide) , method: :delete , class: 'btn btn-danger btn-block' %>
                                </div>
                            
                            
                                                                      
                            </div>
                        </div>
                    </div>

<%end %>