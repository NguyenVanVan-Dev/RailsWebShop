<% content_for :content do %>
   
                        <h1 class="h3 mb-2 text-gray-800">Tables Slide</h1>
                        <p class="mb-4"> </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Slide</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr class="text-center" >
                                            <th>Slide Name</th>
                                            <th>Slide Title</th>
                                           
                                    
                                            <th >Edit </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    
                                        <% @slides .each do |slide| %>
                                         <tr class="text-center" >
                                            <td><%= slide.name %></td>
                                            <td><%= slide.title %></td>
                                         
                                            <td>
                                                <div class="form-group ">
                                                    <%= link_to "Deatis", slide_url(slide.id) ,class: 'btn btn-warning btn-block' %>
                                                    
                                                </div>
                                            </td>
                                         
                                        </tr>
                                        <% end %>

                                       
                                    </tbody>
                                </table>
                                <div class="form-group col-md-6">
                                     <%= link_to "Add Slider", new_slide_url ,class: 'btn btn-info btn-block' %>
                                                    
                                </div>
                            </div>
                        </div>
                    </div>

<%end %>
